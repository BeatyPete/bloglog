<article class="comment">
    {{#each this}}
        <div class="post-header">
            <h1 class="post-title"></h1>
            <div>Commented by {{user.username}} on {{format_date created_at}}</div>
        </div>
        <div>
            <p class="post-body">{{comment_text}}</p>
        </div>
    {{/each}}
</article>